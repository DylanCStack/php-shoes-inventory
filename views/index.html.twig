{% extends "base.html.twig" %}

{% block title %}Homepage{% endblock %}

{% block content %}
<h1>Brand Tracker Homepage</h1>


<div class = "all-stores">
    <h4>All Stores</h4>
{% if all_stores is not empty %}
    <ul>
    {% for store in all_stores %}
        <li><a href="/store/{{store.getId}}">{{store.getName}}</a></li>
    {% endfor %}
    </ul>
{% endif %}
</div>
<div class = "all-brands">
    <h4>All Brands</h4>
{% if all_brands is not empty %}
    <ul>
    {% for brand in all_brands %}
        <li><a href="/brand/{{brand.getId}}">{{brand.getName}}</a></li>
    {% endfor %}
    </ul>
{% endif %}
</div>

<h3 class="clear">Add a store or brand to be tracked by our user-generated database</h3>

<form class="add-store" action = "/add_store" method = "post">
    <h4>Add a store to be tracked</h4>
    <div class = "form-group">
        <label for="name">Name of store:</label>
        <input required class="form-control" type="text" name="name">
    </div>
    <button class="btn btn-success btn-xs" type="submit">Add</button>
</form>

<form class="add-brand" action = "/add_brand" method = "post">
    <h4>Add a brand to be tracked</h4>
    <div class = "form-group">
        <label for="name">Name of brand:</label>
        <input required class="form-control" type="text" name="name">
    </div>
    <button class="btn btn-success btn-xs" type="submit">Add</button>
</form>

<form class="delete" action = "/delete_all_stores" method = "post">
    <h4>DELETE ALL STORES</h4>
    <input class="form-control"  name="_method" type="hidden" value="delete">
    <button class="btn btn-danger btn-xs" type="submit">Delete</button>
</form>

<form class="delete" action = "/delete_all_brands" method = "post">
    <h4>DELETE ALL BRANDS</h4>
    <input class="form-control"  name="_method" type="hidden" value="delete">
    <button class="btn btn-danger btn-xs" type="submit">Delete</button>
</form>

{% endblock %}
